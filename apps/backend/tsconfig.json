{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": false,
		"composite": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ES2022",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@/domains/*": ["domains/*"],
			"@/shared/*": ["shared/*"],
			"@spm/shared-types": ["../../packages/shared-types/src"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts"]
}
