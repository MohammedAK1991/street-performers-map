{
	"name": "street-performers-map",
	"version": "0.1.0",
	"description": "Real-time platform connecting street musicians with audiences",
	"private": true,
	"scripts": {
		"dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
		"dev:backend": "pnpm --filter @spm/backend dev",
		"dev:frontend": "pnpm --filter @spm/frontend dev",
		"build": "pnpm run --recursive build",
		"test": "pnpm run --recursive test",
		"lint": "pnpm run --recursive lint",
		"type-check": "pnpm run --recursive type-check",
		"clean": "pnpm run --recursive clean && rm -rf node_modules",
		"setup": "pnpm install && pnpm run --recursive setup",
		"db:start": "mkdir -p /tmp/mongodb-spm && mongod --dbpath /tmp/mongodb-spm --port 27017 --bind_ip 127.0.0.1 --logpath /tmp/mongodb-spm.log --fork",
		"db:stop": "pkill -f mongod",
		"db:status": "mongosh --eval 'db.runCommand(\"ping\")' --quiet",
		"stop": "pkill -f 'tsx watch' && pkill -f 'vite' && pkill -f 'concurrently'"
	},
	"keywords": [
		"street-music",
		"performers",
		"real-time",
		"maps",
		"music-discovery"
	],
	"author": "Mohammed Abdul Khader",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.10.0",
		"typescript": "^5.3.0",
		"prettier": "^3.1.0",
		"eslint": "^8.55.0",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"concurrently": "^8.2.0"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.0"
}
